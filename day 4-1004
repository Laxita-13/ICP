class Solution {
    public int longestOnes(int[] nums, int k) {
        int maxlen=0;
        int z=0;
        int left=0;
        int right=0;
        int n=nums.length;
        while(right<n){
           if(nums[right]==0) {
            z++;
           }
           while(z>k){
            if(nums[left]==0){
                z--;
            }
            left++;
           }
           maxlen=Math.max(maxlen,right-left+1);
           right++;
        }
        return maxlen;
    }
}
